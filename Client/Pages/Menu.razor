@page "/menu"
@layout MainLayout

@using LunchApp.Shared.DTOs
@inject ApiService Api

<h2 class="mb-4 text-center fw-bold">Today's Dishes</h2>

@if (dishes == null)
{
    <div class="text-center"><div class="spinner-border"></div></div>
}
else
{
    <ul class="dish-list p-0">
        @foreach (var d in dishes)
        {
            <li class="dish-item">
                <div class="dish-image">
                    <img src="@d.ImageUrl" alt="@d.Name" />
                </div>
                <div class="dish-info">
                    <h5>@d.Name</h5>
                    <p class="text-muted">Portion: @d.Portion</p>
                    <p class="fw-bold fs-5">$@d.Price</p>
                </div>
                <div class="dish-actions">
                    @if (!d.Available)
                    {
                        <span class="badge sold-out-badge">Sold Out</span>
                        <button class="btn btn-secondary order-btn" disabled>Order</button>
                        <div class="quantity-group">
                            <div class="input-group">
                                <button class="btn btn-outline-secondary" disabled>−</button>
                                <input type="text" class="form-control text-center" value="0" disabled />
                                <button class="btn btn-outline-secondary" disabled>＋</button>
                            </div>
                            <div class="left-text">Left: 0</div>
                        </div>
                    }
                    else
                    {
                        <span class="badge available-badge">Available</span>
                        <button class="btn btn-success order-btn"
                                @onclick="() => AddToCart(d)">
                            Order
                        </button>
                        <div class="quantity-group">
                            <div class="input-group">
                                <button class="btn btn-outline-secondary" @onclick="() => ChangeQty(d, -1)">−</button>
                                <input type="text" class="form-control text-center" value="@GetQty(d)" readonly />
                                <button class="btn btn-outline-secondary" @onclick="() => ChangeQty(d, +1)">＋</button>
                            </div>
                            <div class="left-text">Left: @d.Leftover</div>
                        </div>
                    }
                </div>
            </li>
        }
    </ul>
}

@code {
    List<DishDto> dishes;
    Dictionary<DishDto, int> cart = new();

    protected override async Task OnInitializedAsync()
    {
        dishes = await Api.GetTodayMenu();
    }

    void AddToCart(DishDto d)
    {
        if (!cart.ContainsKey(d)) cart[d] = 1;
    }

    void ChangeQty(DishDto d, int delta)
    {
        if (!cart.ContainsKey(d)) return;
        cart[d] = Math.Max(0, cart[d] + delta);
    }

    int GetQty(DishDto d) =>
      cart.TryGetValue(d, out var q) ? q : 0;
}
