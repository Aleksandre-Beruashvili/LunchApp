@page "/register"
@inject AuthService AuthService
@inject NavigationManager Nav

<h3>Register</h3>

<EditForm Model="regModel" OnValidSubmit="HandleRegister">
    <InputText @bind-Value="regModel.Email" placeholder="Email" />
    <InputText @bind-Value="regModel.Password" type="password" placeholder="Password" />
    <InputText @bind-Value="regModel.ConfirmPassword" type="password" placeholder="Confirm Password" />
    <button type="submit">Register</button>
</EditForm>

@code {
    RegisterModel regModel = new();
    async Task HandleRegister()
    {
        if (regModel.Password != regModel.ConfirmPassword) return;
        var success = await AuthService.Register(regModel);
        if (success) Nav.NavigateTo("/login");
        else Console.WriteLine("Register failed");
    }
    public class RegisterModel { public string Email { get; set; } public string Password { get; set; } public string ConfirmPassword { get; set; } }
}