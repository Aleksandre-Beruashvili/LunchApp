<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData"
                                DefaultLayout="@typeof(LunchApp.Client.Shared.MainLayout)" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(LunchApp.Client.Shared.MainLayout)">
                <div class="text-center mt-5"><h4>Page not found</h4></div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
